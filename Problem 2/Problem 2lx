a = int(input())
if a >= 1 and a < 30 and a % 2 == 1:
    for i in range(0,a//2):
        print(" " * i + "\\" + " " * (a-(2*(i+1))) + "/")

    print(" " * ((a) // 2) + "X")

    for i in range((a//2)-1, -1, -1):
        print(" " * i + "/" + " " * (a-(2*(i+1))) + "\\")

else:
    print("Invalid input")